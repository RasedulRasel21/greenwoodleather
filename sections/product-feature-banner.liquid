<!-- sections/feature-banner.liquid -->
<style>
  .feature-banner {
    background-color: #f5f5f5;
    padding: 15px 0;
    overflow: hidden;
  }

  .feature-banner__container {
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 10px;
  }

  .feature-banner__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 40px;
    align-items: center;
  }

  .feature-banner__item {
    display: flex;
    align-items: center;
    gap: 12px;
    justify-content: center;
  }

  .feature-banner__icon {
    flex-shrink: 0;
    width: 24px;
    height: 24px;
  }

  .feature-banner__icon svg {
    width: 100%;
    height: 100%;
    stroke: #333;
    fill: none;
    stroke-width: 2;
  }

  .feature-banner__text {
    font-size: 16px;
    font-weight: 400;
    color: #333;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    white-space: nowrap;
  }

  /* Mobile Carousel Styles */
  @media screen and (max-width: 928px) {
    .feature-banner__grid {
      display: block;
      position: relative;
      height: 30px;
    }

    .feature-banner__item {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      opacity: 0;
      transition: opacity 0.5s ease-in-out;
      width: 100%;
      justify-content: center;
    }

    .feature-banner__item.active {
      opacity: 1;
      z-index: 2;
    }

    .feature-banner__text {
      font-size: 12px;
    }
  }

  @media screen and (max-width: 768px) {
    .feature-banner__grid {
      display: block;
      position: relative;
      height: 30px;
    }

    .feature-banner__item {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      opacity: 0;
      transition: opacity 0.5s ease-in-out;
      width: 100%;
      justify-content: center;
    }

    .feature-banner__item.active {
      opacity: 1;
      z-index: 2;
    }

    .feature-banner__text {
      font-size: 12px;
    }
  }
</style>

<div class="feature-banner">
  <div class="feature-banner__container">
    <div class="feature-banner__grid" id="featureBannerGrid">
      
      <!-- Item 1 -->
      <div class="feature-banner__item" data-index="0">
        <div class="feature-banner__icon">
          <svg viewBox="0 0 24 24">
            <circle cx="12" cy="12" r="10"></circle>
            <path d="M9 12l2 2 4-4"></path>
          </svg>
        </div>
        <div class="feature-banner__text">100% Full Grain Leather</div>
      </div>

      <!-- Item 2 -->
      <div class="feature-banner__item" data-index="1">
        <div class="feature-banner__icon">
          <svg viewBox="0 0 24 24">
            <circle cx="12" cy="12" r="10"></circle>
            <path d="M9 12l2 2 4-4"></path>
          </svg>
        </div>
        <div class="feature-banner__text">Experience the Quality - 30 Days to Decide</div>
      </div>

      <!-- Item 3 -->
      <div class="feature-banner__item" data-index="2">
        <div class="feature-banner__icon">
          <svg viewBox="0 0 24 24">
            <circle cx="12" cy="12" r="10"></circle>
            <path d="M9 12l2 2 4-4"></path>
          </svg>
        </div>
        <div class="feature-banner__text">Free Post-Pay</div>
      </div>

    </div>
  </div>
</div>

<script>
  // Mobile carousel functionality
  (function() {
    if (window.innerWidth <= 768) {
      const items = document.querySelectorAll('.feature-banner__item');
      let currentIndex = 0;

      // Show first item
      items[currentIndex].classList.add('active');

      // Auto-rotate items
      setInterval(() => {
        items[currentIndex].classList.remove('active');
        currentIndex = (currentIndex + 1) % items.length;
        items[currentIndex].classList.add('active');
      }, 3000); // Change every 3 seconds
    }

    // Re-initialize on window resize
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        location.reload();
      }, 250);
    });
  })();

  (function() {
    if (window.innerWidth <= 968) {
      const items = document.querySelectorAll('.feature-banner__item');
      let currentIndex = 0;

      // Show first item
      items[currentIndex].classList.add('active');

      // Auto-rotate items
      setInterval(() => {
        items[currentIndex].classList.remove('active');
        currentIndex = (currentIndex + 1) % items.length;
        items[currentIndex].classList.add('active');
      }, 3000); // Change every 3 seconds
    }

    // Re-initialize on window resize
    let resizeTimer;
    window.addEventListener('resize', () => {
      clearTimeout(resizeTimer);
      resizeTimer = setTimeout(() => {
        location.reload();
      }, 250);
    });
  })();
</script>

