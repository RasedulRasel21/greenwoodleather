{% doc %}
  @prompt
    Make a featured collection section where 
    1. make bg white, no border radius
    2. add red bg badge on top left
    3. 2/3 size image (of card)
    4. product title (left) and price (right) in one row
    5. collection name under product title
    6. add two arrows for slider. no border radius or bg for arrows. make 4 column in a row by default , 1. full card bg will white
    2. add a Add to cart button on bottom with 100% width
    3. make image little bid big
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-featured-collection-{{ ai_gen_id }} {
    background-color: {{ block.settings.section_background }};
    padding: 40px 20px;
  }

  .ai-featured-collection__header-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-featured-collection__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    margin: 0;
    color: {{ block.settings.heading_color }};
  }

  .ai-featured-collection__arrows-{{ ai_gen_id }} {
    display: flex;
    gap: 10px;
  }

  .ai-featured-collection__arrow-{{ ai_gen_id }} {
    width: 40px;
    height: 40px;
    border: none;
    background: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.arrow_color }};
    padding: 0;
  }

  .ai-featured-collection__arrow-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-featured-collection__arrow-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  .ai-featured-collection__slider-wrapper-{{ ai_gen_id }} {
    overflow: hidden;
    max-width: 1400px;
    margin-left: auto;
    margin-right: auto;
  }

  .ai-featured-collection__slider-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    transition: transform 0.3s ease;
  }

  .ai-featured-collection__product-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - 60px) / {{ block.settings.products_per_row }});
    min-width: 0;
    background-color: #ffffff;
    padding: 16px;
  }

  .ai-featured-collection__product-link-{{ ai_gen_id }} {
    text-decoration: none;
    color: inherit;
    display: block;
  }

  .ai-featured-collection__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 75%;
    overflow: hidden;
    margin-bottom: 12px;
  }

  .ai-featured-collection__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-featured-collection__badge-{{ ai_gen_id }} {
    position: absolute;
    top: 10px;
    left: 10px;
    background-color: {{ block.settings.badge_color }};
    color: {{ block.settings.badge_text_color }};
    padding: 6px 12px;
    font-size: 12px;
    font-weight: 600;
    z-index: 1;
  }

  .ai-featured-collection__info-{{ ai_gen_id }} {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 6px;
  }

  .ai-featured-collection__product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    margin: 0;
    color: {{ block.settings.product_title_color }};
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  .ai-featured-collection__price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.price_color }};
    margin-left: 10px;
    white-space: nowrap;
  }

  .ai-featured-collection__collection-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.collection_name_size }}px;
    color: {{ block.settings.collection_name_color }};
    margin: 0 0 12px 0;
  }

  .ai-featured-collection__add-to-cart-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 20px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    cursor: pointer;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 600;
    text-transform: uppercase;
    transition: background-color 0.3s ease;
  }

  .ai-featured-collection__add-to-cart-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-featured-collection__placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-featured-collection__placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
  }

  @media screen and (max-width: 989px) {
    .ai-featured-collection__product-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - 40px) / 3);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-featured-collection__product-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - 20px) / 2);
    }

    .ai-featured-collection__header-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
    }
  }
{% endstyle %}

<featured-collection-{{ ai_gen_id }} class="ai-featured-collection-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-featured-collection__header-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-featured-collection__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}
    <div class="ai-featured-collection__arrows-{{ ai_gen_id }}">
      <button class="ai-featured-collection__arrow-{{ ai_gen_id }} ai-featured-collection__arrow-prev-{{ ai_gen_id }}" aria-label="Previous">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="15 18 9 12 15 6"></polyline>
        </svg>
      </button>
      <button class="ai-featured-collection__arrow-{{ ai_gen_id }} ai-featured-collection__arrow-next-{{ ai_gen_id }}" aria-label="Next">
        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <polyline points="9 18 15 12 9 6"></polyline>
        </svg>
      </button>
    </div>
  </div>

  <div class="ai-featured-collection__slider-wrapper-{{ ai_gen_id }}">
    <div class="ai-featured-collection__slider-{{ ai_gen_id }}">
      {% if block.settings.collection != blank %}
        {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
          <div class="ai-featured-collection__product-{{ ai_gen_id }}">
            <a href="{{ product.url }}" class="ai-featured-collection__product-link-{{ ai_gen_id }}">
              <div class="ai-featured-collection__image-wrapper-{{ ai_gen_id }}">
                {% if block.settings.show_badge and block.settings.badge_text != blank %}
                  <div class="ai-featured-collection__badge-{{ ai_gen_id }}">{{ block.settings.badge_text }}</div>
                {% endif %}
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-featured-collection__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="450"
                  >
                {% else %}
                  <div class="ai-featured-collection__placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>
              <div class="ai-featured-collection__info-{{ ai_gen_id }}">
                <h3 class="ai-featured-collection__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                <div class="ai-featured-collection__price-{{ ai_gen_id }}">{{ product.price | money }}</div>
              </div>
              <p class="ai-featured-collection__collection-name-{{ ai_gen_id }}">{{ block.settings.collection.title }}</p>
            </a>
            {%- form 'product', product -%}
              <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
              <button type="submit" class="ai-featured-collection__add-to-cart-{{ ai_gen_id }}" {% unless product.available %}disabled{% endunless %}>
                {% if product.available %}
                  {{ block.settings.button_text }}
                {% else %}
                  Sold out
                {% endif %}
              </button>
            {%- endform -%}
          </div>
        {% endfor %}
      {% else %}
        {% for i in (1..8) %}
          <div class="ai-featured-collection__product-{{ ai_gen_id }}">
            <div class="ai-featured-collection__image-wrapper-{{ ai_gen_id }}">
              {% if block.settings.show_badge and block.settings.badge_text != blank %}
                <div class="ai-featured-collection__badge-{{ ai_gen_id }}">{{ block.settings.badge_text }}</div>
              {% endif %}
              <div class="ai-featured-collection__placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            </div>
            <div class="ai-featured-collection__info-{{ ai_gen_id }}">
              <h3 class="ai-featured-collection__product-title-{{ ai_gen_id }}">Product title</h3>
              <div class="ai-featured-collection__price-{{ ai_gen_id }}">$0.00</div>
            </div>
            <p class="ai-featured-collection__collection-name-{{ ai_gen_id }}">Collection name</p>
            <button type="button" class="ai-featured-collection__add-to-cart-{{ ai_gen_id }}">
              {{ block.settings.button_text }}
            </button>
          </div>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</featured-collection-{{ ai_gen_id }}>

<script>
  (function() {
    class FeaturedCollection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.itemsPerPage = {{ block.settings.products_per_row }};
      }

      connectedCallback() {
        this.slider = this.querySelector('.ai-featured-collection__slider-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-featured-collection__arrow-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-featured-collection__arrow-next-{{ ai_gen_id }}');
        this.products = this.querySelectorAll('.ai-featured-collection__product-{{ ai_gen_id }}');

        this.updateItemsPerPage();
        this.setupEventListeners();
        this.updateButtons();

        window.addEventListener('resize', () => {
          this.updateItemsPerPage();
          this.updateSlider();
        });
      }

      updateItemsPerPage() {
        if (window.innerWidth <= 749) {
          this.itemsPerPage = 2;
        } else if (window.innerWidth <= 989) {
          this.itemsPerPage = 3;
        } else {
          this.itemsPerPage = {{ block.settings.products_per_row }};
        }
      }

      setupEventListeners() {
        this.prevButton.addEventListener('click', () => this.prev());
        this.nextButton.addEventListener('click', () => this.next());
      }

      prev() {
        if (this.currentIndex > 0) {
          this.currentIndex--;
          this.updateSlider();
        }
      }

      next() {
        const maxIndex = Math.max(0, this.products.length - this.itemsPerPage);
        if (this.currentIndex < maxIndex) {
          this.currentIndex++;
          this.updateSlider();
        }
      }

      updateSlider() {
        const product = this.products[0];
        if (!product) return;

        const productWidth = product.offsetWidth;
        const gap = 20;
        const offset = -(this.currentIndex * (productWidth + gap));

        this.slider.style.transform = `translateX(${offset}px)`;
        this.updateButtons();
      }

      updateButtons() {
        const maxIndex = Math.max(0, this.products.length - this.itemsPerPage);

        this.prevButton.disabled = this.currentIndex === 0;
        this.nextButton.disabled = this.currentIndex >= maxIndex;
      }
    }

    customElements.define('featured-collection-{{ ai_gen_id }}', FeaturedCollection{{ ai_gen_id }});
  })();
</script>

