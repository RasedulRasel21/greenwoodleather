      {% if block.settings.title != blank %}
        <h2 class="ai-testimonial-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      {% if block.settings.subtitle != blank %}
        <div class="ai-testimonial-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
