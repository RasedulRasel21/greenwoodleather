                </a>
              {% else %}
                <img
                  src="{{ image | image_url: width: 700 }}"
                  alt="{{ image.alt | escape }}"
                  loading="lazy"
                  width="350"
                  height="350"
                >
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}

        {% for i in (1..10) %}
          {% liquid
            assign image_key = 'image_' | append: i
            assign url_key = 'url_' | append: i
            assign image = block.settings[image_key]
            assign url = block.settings[url_key]
          %}

          {% if image != blank %}
            <div class="ai-testimonial-item-{{ ai_gen_id }}">
              {% if url != blank %}
                <a href="{{ url }}">
                  <img
                    src="{{ image | image_url: width: 700 }}"
                    alt="{{ image.alt | escape }}"
                    loading="lazy"
                    width="350"
                    height="350"
                  >
                </a>
              {% else %}
                <img
