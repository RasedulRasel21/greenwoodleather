<script>
  (function() {
    class TestimonialGallery{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.mode = this.dataset.mode;
        this.currentIndex = 0;
      }

      connectedCallback() {
        if (this.mode === 'marquee') {
          this.setupMarquee();
        } else {
          this.setupSlider();
        }
      }

      setupMarquee() {
        this.track = this.querySelector('.ai-testimonial-marquee__track-{{ ai_gen_id }}');
        
        if (!this.track) return;

        this.track.addEventListener('mouseenter', () => {
          this.track.classList.add('paused');
        });

        this.track.addEventListener('mouseleave', () => {
          this.track.classList.remove('paused');
        });
      }

      setupSlider() {
        this.track = this.querySelector('.ai-testimonial-slider__track-{{ ai_gen_id }}');
        this.items = this.querySelectorAll('.ai-testimonial-item-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('[data-direction="prev"]');
        this.nextButton = this.querySelector('[data-direction="next"]');

        if (!this.track || this.items.length === 0) return;

        this.prevButton.addEventListener('click', () => {
          this.slide('prev');
        });

        this.nextButton.addEventListener('click', () => {
          this.slide('next');
        });
      }

      slide(direction) {
        const itemWidth = this.items[0].offsetWidth;
        const totalItems = this.items.length;

        if (direction === 'next') {
          this.currentIndex = (this.currentIndex + 1) % totalItems;
        } else {
          this.currentIndex = (this.currentIndex - 1 + totalItems) % totalItems;
        }

        const offset = -this.currentIndex * itemWidth;
        this.track.style.transform = 'translateX(' + offset + 'px)';
      }
    }

    customElements.define('testimonial-gallery-{{ ai_gen_id }}', TestimonialGallery{{ ai_gen_id }});
  })();
</script>

